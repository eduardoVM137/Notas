@model List<Usuario>
@{
    ViewData["Title"] = "Mostrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!doctype html>
<html>

<body>

    <div class="card">
        <div class="card-header">
            <div class="nota-header">
                <h3>Mis Notas</h3>

                <div class="nota-meta">
                    <button type="button" class="btn btn-dark btn-sm boton-nuevo-usuario">Nuevo Usuario</button>
                </div>
            </div>
        </div>
        <div class="card-body">


    @*        <style>
                .ocultar-columna th:nth-child(1),
                .ocultar-columna td:nth-child(1) {
                    display: none;
                }
            </style>*@

            <hr />
            <table class="table table-striped table-bordered table-condensed" id="tbNotas">
                <thead>
                    <tr>
                        <th>idusuario</th>
                        <th>nombre</th>
                        <th>email</th>
                        @*<th>fecha</th>*@
                        <th>foto</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="ocultar-columna">
                            <td>@item.intidUsuario</td>
                            <td>@item.strNombre</td>
                            <td>@item.strEmail</td>
                            @*<td>@item.dtFecha_Registro</td>*@
                            <td>@item.imgFotoBytes</td>
                            <td>

                                <button class="btn btn-primary btn-sm boton-detalle-usuario"
                                        onclick="redirigirAVistaDestino('@item.intidUsuario')">
                                    Ver Logins
                                </button>

                                <button class="btn btn-outline-warning btn-sm boton-editar-usuario"
                                        data-idusuario="@item.intidUsuario"
                                        data-nombre="@item.strNombre"
                                        data-email="@item.strEmail"
                                        @*data-fecha="@item.dtFecha_Registro"*@
                                        @*data-foto="@item.imgFotoBytes">*@>
                                    Editar
                                </button>

                                <button class="btn btn-outline-danger btn-sm boton-eliminar-usuario"
                                        data-idusuario="@item.intidUsuario"
                                        data-nombre="@item.strNombre">
                                    Eliminar
                                </button>

                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
    <script>
        function redirigirAVistaDestino(idUsuario/*, Categoria, Usuario_creador*/) {

            var url = "/Login/Mantemiento?idUsuario=" + encodeURIComponent(idUsuario);

            window.location.href = url;
        }
    </script>


    <!-- Modal -->
    <div class="modal fade" id="modalUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombre" autocomplete="off">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" id="txtEmail" autocomplete="off">
                    </div>

                    <label for="image" class="form-label">Selecciona una imagen</label>
                    <div class="mb-3 text-center">
                        <input type="file" class="form-control" id="image" accept="image/*" onchange="previewImage()">
                    </div>
                    <div id="previewContainer" class="d-flex justify-content-center align-items-center mt-3 mx-auto" style="width: 200px; height: 200px; border: 1px solid #ced4da; border-radius: .375rem; overflow: hidden; display: none;">
                        <img id="preview" src="https://th.bing.com/th/id/OIP.6Zu4MaXfS1aM1EdA31OweQAAAA?pid=ImgDet&rs=1" class="img-fluid" alt="Vista previa de la imagen" style="max-width: 100%; max-height: 100%; object-fit: contain;">
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary boton-guardar-cambios-usuario">Guardar</button>
                </div>
            </div>
        </div>
    </div>




 

</body>
</html>
<style>
    .nota-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nota-meta {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .usuario-fecha {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .usuario {
        font-size: 14px;
        color: #666;
        margin-right: 10px;
    }

    .fecha {
        font-size: 12px;
        color: #888;
    }

    .boton-nuevo-dtnota {
        margin-top: 5px;
    }
</style>

@section Scripts{
    <script src="~/js/Usuario.js"></script> 

} 