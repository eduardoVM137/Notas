@model List<Login>
@{
    ViewData["Title"] = "Mantemiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!doctype html>
<html>

<body>

    <div class="card"> 

        @{ 
                <div class="nota-header">
                <h3 class="nota-titulo">@ViewBag.objUsuario.strNombre</h3>
                    <div class="nota-meta">
                    <button type="button" class="btn btn-dark btn-sm boton-nuevo-Login">Nuevo Acceso</button>
                    </div>
                </div> 
           
        }
        <div class="card-body">


        @*    <style>
                .ocultar-columna th:nth-child(1),
                .ocultar-columna td:nth-child(1) {
                    display: none;
                }
            </style>*@

            <hr />
            <table class="table table-striped table-bordered table-condensed" id="tbNotas">
                <thead>
                    <tr>
                        <th>idLogin</th>
                        <th>IdUsuario</th>
                        <th>Usuario</th>
                        <th>Contraseña</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="ocultar-columna">
                            <td>@item.intidLogin</td>
                            <td>@item.intidUsuario</td>
                            <td>@item.strUsuario</td>
                            <td>@item.strContraseña</td>

                            <td>


                                <button class="btn btn-outline-warning btn-sm boton-editar-Login"
                                        data-idlogin="@item.intidLogin" data-usuario="@item.strUsuario" data-contraseña="@item.strContraseña">
                                    Editar
                                </button>

                                <button class="btn btn-outline-danger btn-sm boton-eliminar-Login"
                                        data-idlogin="@item.intidLogin"
                                        data-usuario="@item.strUsuario">
                                    Eliminar
                                </button>

                            </td>
                        </tr>

                    }
                </tbody>
            </table>


            <!-- Modal -->

            <div class="modal fade" id="modalLogin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel"> Login</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Usuario</label>
                                <input type="text" class="form-control" id="txtUsuarioLogin" autocomplete="off">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Contraseña</label>
                                <input type="text" class="form-control" id="txtContraseñaLogin" autocomplete="off">
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary boton-guardar-cambios-Login">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    </div>
</body>
</html>
<style>
    .nota-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nota-meta {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .usuario-fecha {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .usuario {
        font-size: 14px;
        color: #666;
        margin-right: 10px;
    }

    .fecha {
        font-size: 12px;
        color: #888;
    }

    .boton-nuevo-dtnota {
        margin-top: 5px;
    }
</style>

@section Scripts{
    <script src="~/js/Login.js"></script> 

} 